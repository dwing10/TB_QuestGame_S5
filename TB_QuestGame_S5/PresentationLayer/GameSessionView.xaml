<Window x:Class="TBQuestGame_S1.PresentationLayer.GameSessionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GameSessionView" 
        Height="650" 
        Width="1100"
        Background= "Black">
    <Window.Resources>
        <!--Border Style-->
        <Style
            x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="5"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
    </Window.Resources>

    <!--Main Grid-->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/woodWall.jpg" Opacity=".7"/>
        </Grid.Background>
        <Border 
            Margin="10" 
            Style="{StaticResource BorderStyle}"
            BorderBrush="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel (Player info, inventory, barracks) -->
                <Border
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,5,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Content="Imperator: "
                            Foreground="White"
                            FontSize="20"
                            FontWeight="ExtraBold"
                            VerticalContentAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" Opacity=".9"/>
                            </Label.Effect>
                        </Label>
                        <Border
                            CornerRadius="10"
                            BorderThickness="5"
                            Width="128"
                            Height="36"
                            BorderBrush="Black"
                            Grid.Row="0"
                            Grid.Column="1">
                            <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Foreground="White"
                            Background="Black"
                            Width="120"
                            Height="30"
                            FontSize="20"
                            Text="{Binding Player.Name}"
                            TextAlignment="Center" />
                        </Border>
                        <Border
                            CornerRadius="10"
                            BorderThickness="5"
                            Width="128"
                            Height="36"
                            BorderBrush="Black"
                            Grid.Row="1"
                            Grid.Column="1">
                            <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Foreground="White"
                            Background="Black"
                            Width="120"
                            Height="30"
                            FontSize="20"
                            Text="{Binding Player.LegionName}"
                            TextAlignment="Center" />
                        </Border>

                        <Label 
                            Grid.Row="1"
                            Grid.Column="0"
                            Content="Legion: "
                            Foreground="White"
                            FontSize="20"
                            FontWeight="ExtraBold"
                            VerticalContentAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" Opacity=".9"/>
                            </Label.Effect>
                        </Label>
                        <Button 
                            Grid.Column="1"
                            Grid.Row="2"
                            Content="Recruit"
                            Width="100"
                            Height="40"
                            FontSize="16"
                            Foreground="White"
                            BorderBrush="White"
                            BorderThickness="3"
                            FontWeight="ExtraBold"
                            Click="Recruit_Button_Click"
                            Background="Black">
                        </Button>
                        <Button 
                            Grid.Column="0"
                            Grid.Row="3"
                            Content="Missions"
                            Width="100"
                            Height="40"
                            FontSize="16"
                            Foreground="White"
                            BorderBrush="White"
                            BorderThickness="3"
                            FontWeight="ExtraBold"
                            Background="Black" 
                            Click="Mission_Button_Click"/>
                        <Button
                            Grid.Column="0"
                            Grid.Row="2"
                            Content="Barracks"
                            Width="100"
                            Height="40"
                            FontSize="16"
                            Foreground="White"
                            BorderBrush="White"
                            BorderThickness="3"
                            FontWeight="ExtraBold"
                            Click="Barracks_Button_Click"
                            Background="Black">
                        </Button>
                        <Button 
                            Grid.Row="3"
                            Grid.Column="1"
                            Content="Guide"
                            FontSize="16"
                            Foreground="White"
                            Background="Black"
                            BorderThickness="3"
                            BorderBrush="White"
                            FontWeight="ExtraBold"
                            Width="100"
                            Height="40" 
                            Click="Info_Button_Click">
                        </Button>
            
                        <StackPanel
                            Grid.Row="4"
                            Grid.Column="1">
                            <Button
                                Margin="0,0,0,5"
                                Content="Speak"
                                Width="100"
                                Height="40"
                                FontSize="14"
                                Foreground="White"
                                Background="Black"
                                BorderBrush="White"
                                BorderThickness="3"
                                FontWeight="ExtraBold" 
                                Click="Speak_Button_Click"
                                >
                            </Button>
                            <Button
                                Margin="0,5,0,5"
                                Content="Attack"
                                Width="100"
                                Height="40"
                                FontSize="14"
                                Foreground="White"
                                Background="Black"
                                BorderBrush="White"
                                BorderThickness="3"
                                FontWeight="ExtraBold" 
                                Click="Attack_Button_Click"
                                >
                            </Button>
                            <Button
                                Margin="0,5,0,5"
                                Content="Use"
                                Width="100"
                                Height="40"
                                FontSize="16"
                                Foreground="White"
                                Background="Black"
                                BorderBrush="White"
                                BorderThickness="3"
                                FontWeight="ExtraBold" 
                                Click="Use_Button_Click">
                            </Button>
                            <Button
                                Margin="0,5,0,0"
                                Content="Drop"
                                Width="100"
                                Height="40"
                                FontSize="16"
                                Foreground="White"
                                Background="Black"
                                BorderBrush="White"
                                BorderThickness="3"
                                FontWeight="ExtraBold" 
                                Click="Drop_Button_Click">
                            </Button>
                        </StackPanel>
                        <TabControl
                            x:Name= "PlayerInventoryTabs"
                            Width="175"
                            Background="Black"
                            Grid.Column="0"
                            Grid.Row="4">
                            <TabItem 
                                    Header="Buffs"
                                    x:Name= "BuffsTab"
                                    >
                                <DataGrid 
                                        x:Name= "BuffsDataGrid"
                                        ItemsSource="{Binding Player.Buffs}"
                                        SelectedItem="{Binding CurrentGameItem}"
                                        AutoGenerateColumns="False"
                                        HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn 
                                            Header="Name"
                                            Binding="{Binding GameItem.Name, Mode=OneWay}"
                                            Width="*"/>
                                        <DataGridTextColumn 
                                            Header="Qty"
                                            Binding="{Binding Quantity, Mode=OneWay}"
                                            Width="auto"/>
                                        <DataGridTextColumn 
                                            Header="Value"
                                            Binding="{Binding GameItem.Value, Mode=OneWay}"/>
                                    </DataGrid.Columns>
                                    <DataGrid.Background>
                                        <ImageBrush ImageSource="/Assets/parchment.jpg"/>
                                    </DataGrid.Background>
                                </DataGrid>
                            </TabItem>
                            <TabItem 
                                    Header="Gems"
                                    x:Name= "gemsTab">
                                <DataGrid 
                                    x:Name= "gemsDataGrid"
                                    ItemsSource="{Binding Player.Gems}"
                                    SelectedItem="{Binding CurrentGameItem}"
                                    AutoGenerateColumns="False"
                                    HeadersVisibility="Column"
                                    >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn 
                                            Header="Name"
                                            Binding="{Binding GameItem.Name, Mode=OneWay}"
                                            Width="*"/>
                                        <DataGridTextColumn 
                                            Header="Qty"
                                            Binding="{Binding Quantity, Mode=OneWay}"
                                            Width="auto"/>
                                    </DataGrid.Columns>
                                    <DataGrid.Background>
                                        <ImageBrush ImageSource="/Assets/parchment.jpg" />
                                    </DataGrid.Background>
                                </DataGrid>
                            </TabItem>

                            <TabItem 
                                    Header="Armor"
                                    x:Name= "armorSetTab">
                                <DataGrid 
                                    x:Name= "armorSetDataGrid"
                                    ItemsSource="{Binding Player.ArmorSet}"
                                    SelectedItem="{Binding CurrentGameItem}"
                                    AutoGenerateColumns="False"
                                    HeadersVisibility="Column"
                                    >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn 
                                            Header="Name"
                                            Binding="{Binding GameItem.Name, Mode=OneWay}"
                                            Width="*"/>
                                        <DataGridTextColumn 
                                            Header="Qty"
                                            Binding="{Binding Quantity, Mode=OneWay}"
                                            Width="auto"/>
                                    </DataGrid.Columns>
                                    <DataGrid.Background>
                                        <ImageBrush ImageSource="/Assets/parchment.jpg" />
                                    </DataGrid.Background>
                                </DataGrid>
                            </TabItem>

                            <TabItem 
                                Header="Gold"
                                x:Name= "TreasureTab">
                                <DataGrid 
                                    x:Name= "TreasureDataGrid"
                                    ItemsSource="{Binding Player.Treasures}"
                                    SelectedItem="{Binding CurrentGameItem}"
                                    AutoGenerateColumns="False"
                                    HeadersVisibility="Column"
                                    >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn 
                                            Header="Name"
                                            Binding="{Binding GameItem.Name, Mode=OneWay}"
                                            Width="*"/>
                                        <DataGridTextColumn 
                                            Header="Qty"
                                            Binding="{Binding Quantity, Mode=OneWay}"
                                            Width="auto"/>
                                    </DataGrid.Columns>
                                    <DataGrid.Background>
                                        <ImageBrush ImageSource="/Assets/parchment.jpg"/>
                                    </DataGrid.Background>
                                </DataGrid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Border>
                <Grid>
                </Grid>

                <!-- Battle Panel -->
                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10,5,10,10"                  
                    >
                    <Grid>
                        <Grid.Background>
                            <ImageBrush ImageSource="/Assets/FinalMundas.jpg"/>
                        </Grid.Background>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0">
                            <Button
                                Margin="0,30,45,0"
                                Tag="Alheimurrinn"
                                Content="Alheimurrinn"
                                Width="140"
                                Height="30"
                                FontSize="22"
                                FontFamily="Old English Text MT"
                                FontWeight="ExtraBold"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="Map_Location_Button_Click"/>
                            <Label
                                Margin="0,0,45,0"
                                Content="5"
                                Height="35"
                                Width="50"
                                FontSize="16"
                                FontWeight="ExtraBold"
                                Foreground="Red"
                                HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="2"
                            Grid.Column="0">
                            <Button
                                Margin="0,75,65,0"
                                Tag="Qua Redi"
                                Content="Qua Redi"
                                Width="100"
                                Height="30"
                                FontSize="24"
                                FontFamily="Old English Text MT"
                                FontWeight="ExtraBold"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="Map_Location_Button_Click"/>
                            <Label 
                                Margin="0,0,65,0"
                                Content="4"
                                Width="50"
                                FontSize="16"
                                FontWeight="ExtraBold"
                                Foreground="Orange"
                                HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="2"
                            Grid.Column="1"
                            Orientation="Vertical">
                            <Button
                                Margin="0,70,90,0"
                                Tag="Dore"
                                Content="Dore"
                                Width="60"
                                Height="30"
                                FontSize="24"
                                FontFamily="Old English Text MT"
                                FontWeight="ExtraBold"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="Map_Location_Button_Click"/>
                            <Label
                                Margin="0,0,90,0"
                                Content="3"
                                Width="50"
                                FontSize="16"
                                FontWeight="ExtraBold"
                                Foreground="Yellow"
                                HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        <StackPanel
                            Orientation="Vertical"
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="10,0,0,0"
                            Width="160"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center">
                            <Button
                                Margin="5,10,10,0"
                                Tag="North Bourg"
                                Content="North Bourg"
                                Width="150"
                                Height="30"
                                FontSize="24"
                                FontFamily="Old English Text MT"
                                FontWeight="ExtraBold"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Center"
                                Click="Map_Location_Button_Click"/>
                            <Label 
                                Content="1"
                                Height="30"
                                Width="50"
                                FontSize="16"
                                FontWeight="ExtraBold"
                                Foreground="Green"
                                HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        <Button 
                            Grid.Column="2"
                            Grid.Row="0"
                            Margin="2"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            VerticalContentAlignment="Center"
                            Content="X"
                            Height="30"
                            Width="30"
                            Background="Red"
                            Foreground="White"
                            FontWeight="ExtraBold"
                            FontSize="18"
                            Click="Exit_Button_Click"/>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="2">
                            <Button
                                Margin="0,70,10,0"
                                Tag="South Bourg"
                                Content="South Bourg"
                                Width="150"
                                Height="30"
                                FontSize="24"
                                FontFamily="Old English Text MT"
                                FontWeight="ExtraBold"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Click="Map_Location_Button_Click"/>
                            <Label 
                                Content="2"
                                Width="50"
                                FontSize="16"
                                FontWeight="ExtraBold"
                                Foreground="Blue"
                                HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,20,0,0">
                            <Button 
                                Tag="Elkmire"
                                Content="Elkmire"
                                Width="150"
                                Height="50"
                                FontSize="24"
                                FontFamily="Old English Text MT"
                                FontWeight="ExtraBold"
                                Foreground="White"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Click="Map_Location_Button_Click"/>
                            <Label 
                                Content="3"
                                Width="50"
                                FontSize="16"
                                FontWeight="ExtraBold"
                                Foreground="Yellow"
                                HorizontalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="7">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Orientation="Horizontal"
                            Grid.Column="0"
                            Margin="3">
                            <TabControl
                            Grid.Row="4"
                            Grid.Column="0"
                            x:Name="npcTabControl"
                            Background="Black"
                                Width="330">
                                <TabItem
                                Header="NPC's"
                                x:Name="npcTab"
                                Background="Black"
                                >
                                    <DataGrid 
                                    x:Name="LocationNpcsDataGrid"
                                    ItemsSource="{Binding CurrentLocation.NPCS}" 
                                    SelectedItem="{Binding CurrentNPC}"
                                    AutoGenerateColumns="False"
                                    HeadersVisibility="Column">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn 
                                            Header="Description" 
                                            IsReadOnly="True"                 
                                            Binding="{Binding Information, Mode=OneWay}"
                                            Width="*"
                                            >
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style>
                                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                        <DataGrid.Background>
                                            <ImageBrush ImageSource="/Assets/parchment.jpg"/>
                                        </DataGrid.Background>
                                    </DataGrid>
                                </TabItem>
                            </TabControl>
                            
                        </StackPanel>
                    </Grid>
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="7"
                    Style="{StaticResource BorderStyle}">
                    <StackPanel
                        Orientation="Vertical"
                        Background="Black">
                        <Label
                            Margin="0,5,5,0"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Bottom"
                            Content="{Binding CurrentLocation.Name, Mode=OneWay}"
                            FontSize="18"
                            FontFamily="Old English Text MT"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Width="150"
                            Height="30"/>
                        <TextBox
                            TextWrapping="Wrap"
                            VerticalAlignment="Center"
                            Text="{Binding CurrentLocationInformation, Mode=OneWay}"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="12"
                            FontWeight="ExtraBold"
                            Height="85"
                            IsReadOnly="True"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
